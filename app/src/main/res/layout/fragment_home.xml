<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/image_margin"
    tools:context="com.example.recognition.view.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_general"
            android:text="General\nModel"
            android:textColor="@color/yellow"
            android:background="@drawable/square"
            android:textSize="@dimen/response_text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="left"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_demographics"
            android:text="@string/demographic"
            android:textColor="@color/yellow"
            android:background="@drawable/square"
            android:textSize="@dimen/response_text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="2"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_color"
            android:text="@string/color"
            android:textColor="@color/yellow"
            android:background="@drawable/square"
            android:textSize="@dimen/response_text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>